Aggregation aggregation;
    if(changeLogFilters.getSort() != null && changeLogFilters.getSort().equals(SORT_LAST_MODIFIED_BY)){
      aggregation = Aggregation.newAggregation(
              matchOperation, 
              addFieldsOperation,
              group(HON).first(Aggregation.ROOT).as(DOC),
              replaceRoot(DOC),
              sort, 
              skip, 
              limit, 
              projectSelectiveData
      ).withOptions(aggregationOptionsToAllowDiskUse);
    } else {
      aggregation = Aggregation.newAggregation(
              matchOperation, 
              group(HON).first(Aggregation.ROOT).as(DOC),
              replaceRoot(DOC),
              sort, 
              skip, 
              limit,
              addFieldsOperation,
              projectSelectiveData
      ).withOptions(aggregationOptionsToAllowDiskUse);
    }
