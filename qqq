        sortCombinedReports(combinedReports, reportsRequestDTO.getSort(), reportsRequestDTO.getOrder());
private void sortCombinedReports(List<OperatorReviewerReportDTO> reports, String sort, String order) {
        if (reports == null || reports.isEmpty()) {
            return;
        }

        Comparator<OperatorReviewerReportDTO> comparator = getComparatorForOperatorReviewer(sort);
        
        if ("desc".equalsIgnoreCase(order)) {
            comparator = comparator.reversed();
        }
        
        reports.sort(comparator);
    }

    private Comparator<OperatorReviewerReportDTO> getComparatorForOperatorReviewer(String sort) {
        if (sort == null) {
            return Comparator.comparing(OperatorReviewerReportDTO::getResearcherName, 
                    Comparator.nullsLast(String.CASE_INSENSITIVE_ORDER));
        }

        return switch (sort.toLowerCase()) {
            case "researcher_name", "researchername" -> 
                Comparator.comparing(OperatorReviewerReportDTO::getResearcherName, 
                        Comparator.nullsLast(String.CASE_INSENSITIVE_ORDER));
            case "added" -> Comparator.comparingInt(OperatorReviewerReportDTO::getAdded);
            case "changed" -> Comparator.comparingInt(OperatorReviewerReportDTO::getChanged);
            case "archived" -> Comparator.comparingInt(OperatorReviewerReportDTO::getArchived);
            case "deleted" -> Comparator.comparingInt(OperatorReviewerReportDTO::getDeleted);
            case "new", "newcount" -> Comparator.comparingInt(OperatorReviewerReportDTO::getNewCount);
            case "in_progress", "inprogress" -> Comparator.comparingInt(OperatorReviewerReportDTO::getInProgress);
            case "on_hold", "onhold" -> Comparator.comparingInt(OperatorReviewerReportDTO::getOnHold);
            case "cancelled" -> Comparator.comparingInt(OperatorReviewerReportDTO::getCancelled);
            case "completed" -> Comparator.comparingInt(OperatorReviewerReportDTO::getCompleted);
            case "total" -> Comparator.comparingInt(OperatorReviewerReportDTO::getTotal);
            default -> Comparator.comparing(OperatorReviewerReportDTO::getResearcherName, 
                    Comparator.nullsLast(String.CASE_INSENSITIVE_ORDER));
        };
    }
